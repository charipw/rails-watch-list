<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "wvsyvvumy8rd0asrdf6y" %>');">
  <div class="container">
    <h1 class="text-center">Save any kind of movies</h1>
    <p class="text-center">Start now!</p>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h4>My Lists</h4>
      <%= link_to "Create a new list", new_list_path, class: "btn btn-ghost" %>
  </div>

  <div class="row row-cols-3 mt-3 gy-4"  >
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>');">
          <%= link_to list.name, list_path(list), class: "link-light text-decoration-none" %>
        </div>
      </div>
    <% end %>
  </div>

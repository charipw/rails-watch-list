<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key %>');">
  <h1 class="text-center"> <%= @list.name %> </h1>
</div>

<div class="container mt-5">

  <div class="d-flex justify-content-between">
    <%= link_to "Home page", lists_path(),  class: "btn btn-ghost"  %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list) , class: "btn btn-ghost" %>
  </div>

  <div class="row row-cols-2 mt-3 gy-4">
    <% @list.bookmarks.each do |b| %>
      <div class="col">

        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">

            <div>
              <h2><%= b.movie.title %></h2>
              <p>"<%= b.comment %>"</p>
            </div>

          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
